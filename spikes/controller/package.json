{
  "name": "controller",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "vite dev",
    "test": "wireit",
    "build:tsc": "wireit",
    "coverage": "wireit"
  },
  "wireit": {
    "typescript-files-and-deps": {
      "dependencies": [],
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "tsconfig.json",
        "package.json"
      ],
      "clean": true
    },
    "build:tsc": {
      "command": "tsc -b --pretty",
      "env": {
        "FORCE_COLOR": "1"
      },
      "dependencies": [
        "typescript-files-and-deps"
      ],
      "output": [
        "dist"
      ]
    },
    "test": {
      "command": "node --import ./dist/tests/setup.js --experimental-test-coverage --test-reporter=spec --test-reporter-destination=stdout --test-reporter=lcov --test-reporter-destination=lcov.info --test --enable-source-maps ./dist/tests/**/*.js",
      "env": {
        "NODE_V8_COVERAGE": "./coverage/tmp"
      },
      "files": [],
      "output": [
        "lcov.info",
        "./coverage/tmp",
        "./storage/**/*.*"
      ],
      "dependencies": [
        "build:tsc"
      ]
    },
    "coverage": {
      "command": "c8 --all report --reporter=html --src=src",
      "files": [
        ".c8rc.json"
      ],
      "dependencies": [
        "test"
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "type": "module",
  "dependencies": {
    "@lit-labs/signals": "^0.2.0",
    "@lit/context": "^1.1.6",
    "idb": "^8.0.3",
    "lit": "^3.3.2",
    "signal-utils": "^0.21.1",
    "tweakpane": "^4.0.5",
    "vite": "^7.3.1"
  },
  "devDependencies": {
    "@tweakpane/core": "^2.0.5",
    "@types/node-localstorage": "^1.3.3",
    "c8": "^10.1.3",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^27.4.0",
    "node-localstorage": "^3.0.5",
    "wireit": "^0.15.0-pre.2"
  }
}
