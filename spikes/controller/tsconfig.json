{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,

    "target": "ES2022",
    "module": "nodenext",
    "lib": ["ES2023", "DOM", "DOM.Iterable", "ES2024.Promise"],
    "skipLibCheck": true,
    "useDefineForClassFields": false,

    /* Bundler mode */
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["dist"]
}
