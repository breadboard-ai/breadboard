{
  "name": "opal-backend-shared",
  "version": "0.1.0",
  "private": true,
  "description": "Shared Opal backend logic (synced to production)",
  "scripts": {
    "setup": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "setup": {
      "command": "python3 -m venv .venv && PIP_INDEX_URL=https://pypi.org/simple/ .venv/bin/pip install -e '.[dev]'",
      "files": [
        "pyproject.toml"
      ],
      "output": []
    },
    "test": {
      "command": ".venv/bin/python -m pytest tests/ -v",
      "files": [
        "opal_backend_shared/**/*.py",
        "tests/**/*.py"
      ],
      "dependencies": []
    }
  }
}
