    },
    {
      "from": "assembleBoardInvoke",
      "to": "invokeBoard",
      "out": "*",
      "in": ""
    },
    {
      "from": "formatFunctionResponse",
      "to": "replyToFunction",
      "out": "context",
      "in": "context"
    },
    {
      "from": "formatFunctionResponse",
      "to": "assembleContext",
      "out": "context",
      "in": "context"
    },
    {
      "from": "formatFunctionDeclarations",
      "to": "doWork",
      "out": "tools",
      "in": "tools"
    },
    {
      "from": "formatFunctionDeclarations",
      "to": "assembleBoardInvoke",
      "out": "urlMap",
      "in": "urlMap"
    },
    {
      "from": "formatFunctionDeclarations",
      "to": "replyToFunction",
      "out": "tools",
      "in": "tools"
    },
    {
      "from": "buildContext",
      "to": "doWork",
      "out": "context",
      "in": "context"
    },
    {
      "from": "buildContext",
      "to": "formatFunctionResponse",
      "out": "context",
      "in": "context"
    },
    {
      "from": "invokeBoard",
      "to": "extractBoardResponse",
      "out": "*",
