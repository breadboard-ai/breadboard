      "in": "generated"
    },
    {
      "from": "router",
      "to": "formatFunctionResponse",
      "out": "functionCall",
      "in": "functionCall"
    },
    {
      "from": "router",
      "to": "output-2",
      "out": "context",
      "in": "context"
    },
    {
      "from": "router",
      "to": "output-2",
      "out": "text",
      "in": "text"
    },
    {
      "from": "doWork",
      "to": "router",
      "out": "context",
      "in": "context"
    },
    {
      "from": "assembleBoardInvoke",
      "to": "invokeBoard",
