  "nodes": [
    {
      "id": "output-2",
      "type": "output",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "context": {
              "type": "array",
              "items": {
                "type": "object",
                "behavior": [
                  "llm-content"
                ]
              },
              "title": "Done"
            }
          }
        }
      }
    },
    {
      "id": "fn-3",
      "type": "runJavascript",
      "configuration": {
        "code": "const fn_3 = ({ context, plan }) => {\n  const addMetadata = (contents2) => {\n    contents2.push({\n      role: \"$metadata\",\n      data: {\n        looperStart: true,\n        plan\n      }\n    });\n    return contents2;\n  };\n  const contents = context;\n  return { context: addMetadata(structuredClone(contents)) };\n};",
        "name": "fn_3",
        "raw": true
      },
      "metadata": {
        "title": "Read Plan"
      }
    },
    {
      "id": "input-1",
      "type": "input",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "context": {
              "title": "Context in",
              "type": "array",
              "items": {
                "type": "object",
                "behavior": [
                  "llm-content"
                ]
              },
              "default": "[]",
              "examples": [
                "{\"parts\":[{\"text\":\"test\"}],\"role\":\"user\"}"
