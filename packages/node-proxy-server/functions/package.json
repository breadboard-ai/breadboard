{
  "name": "functions",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:tsc": "wireit",
    "build:rollup": "wireit",
    "serve": "wireit",
    "shell": "npm run build && npx firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "../../breadboard:build",
        "../../llm-starter:build",
        "../../palm-kit:build",
        "build:rollup",
        "build:tsc"
      ]
    },
    "typescript-files-and-deps": {
      "dependencies": [
        "../../breadboard:build:tsc",
        "../../llm-starter:build:tsc",
        "../../palm-kit:build:tsc"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ]
    },
    "build:tsc": {
      "command": "tsc",
      "dependencies": [
        "typescript-files-and-deps"
      ],
      "files": [],
      "output": [
        "lib/",
        "!lib/bundle.js"
      ],
      "clean": "if-file-deleted"
    },
    "build:rollup": {
      "command": "rollup -c",
      "dependencies": [
        "build:tsc"
      ],
      "files": [
        "rollup.config.js",
        "package.json"
      ],
      "output": [
        "lib/bundle.js"
      ]
    },
    "serve": {
      "command": "firebase emulators:start --only functions",
      "service": true,
      "dependencies": [
        {
          "script": "typescript-files-and-deps",
          "cascade": false
        }
      ],
      "files": []
    }
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/bundle.js",
  "dependencies": {
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1"
  },
  "devDependencies": {
    "@google-labs/breadboard": "*",
    "@google-labs/llm-starter": "*",
    "@google-labs/palm-kit": "*",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "firebase-functions-test": "^3.1.0",
    "rollup": "^4.5.2",
    "typescript": "^4.9.0"
  },
  "private": true
}
