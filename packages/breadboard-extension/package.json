{
  "name": "@google-labs/breadboard-extension",
  "publishConfig": {
    "registry": "https://wombat-dressing-room.appspot.com"
  },
  "private": true,
  "displayName": "Breadboard Debugger",
  "version": "0.1.8",
  "description": "A Breadboard debugger extension for VSCode.",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "./icon.png",
  "type": "commonjs",
  "scripts": {
    "prepack": "npm run build",
    "test": "wireit",
    "build": "wireit",
    "build:tsc": "wireit",
    "build:debugger": "wireit",
    "lint": "wireit",
    "package": "wireit",
    "package-list": "vsce ls --no-dependencies --ignoreFile .packageignore"
  },
  "activationEvents": [
    "onDebug"
  ],
  "categories": [
    "Debuggers"
  ],
  "contributes": {
    "commands": [
      {
        "command": "breaboard.debugBoard",
        "title": "Debug Board",
        "category": "Breadboard",
        "enablement": "!inDebugMode && (resourceExtname == .json || resourceExtname == .ts || resourceExtname == .js)"
      },
      {
        "command": "breaboard.renderBoard",
        "title": "Render Board",
        "category": "Breadboard",
        "enablement": "resourceExtname == .ts"
      }
    ],
    "configuration": [
      {
        "title": "Breadboard",
        "properties": {
          "breadboard.boardLocations": {
            "type": "string",
            "default": null,
            "description": "The location of your boards"
          }
        }
      }
    ],
    "debuggers": [
      {
        "type": "breadboard",
        "languages": [
          "json"
        ],
        "label": "Breadboard Debug",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "board"
            ],
            "properties": {
              "board": {
                "type": "string",
                "description": "The board to debug",
                "default": "${workspaceFolder}/${command:AskForBoard}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Pause execution on board load",
                "default": true
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": "Breadboard: Debug Board",
            "description": "Configure a Breadboard Debug",
            "body": {
              "type": "breadboard",
              "request": "launch",
              "name": "Debug board",
              "board": "${workspaceFolder}/${command:AskForBoard}",
              "stopOnEntry": true
            }
          }
        ],
        "initialConfigurations": [
          {
            "type": "breadboard",
            "request": "launch",
            "name": "Debug Board",
            "board": "${workspaceFolder}/${command:AskForBoard}",
            "stopOnEntry": true
          }
        ],
        "variables": {
          "AskForBoard": "breadboard.getBoardPath"
        }
      }
    ]
  },
  "wireit": {
    "build": {
      "command": "node build.mjs",
      "env": {
        "FORCE_COLOR": "1"
      },
      "dependencies": [
        "../breadboard:build",
        "../core-kit:build",
        "../json-kit:build",
        "../template-kit:build",
        "../node-nursery-web:build",
        "../palm-kit:build",
        "extension-files"
      ],
      "files": [
        "src/**/*.js",
        "src/**/*.ts",
        "tests/**/*.ts",
        "tsconfig.json",
        "../../core/tsconfig/base.json"
      ],
      "output": [
        "dist/"
      ],
      "clean": true
    },
    "lint": {
      "command": "eslint . --ext .ts",
      "env": {
        "FORCE_COLOR": "1"
      },
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "../../.eslintrc.json"
      ],
      "output": []
    },
    "extension-files": {
      "files": [
        "dist/**/*.*",
        ".packageignore"
      ]
    },
    "package": {
      "command": "vsce package --no-dependencies --ignoreFile .packageignore --out debugger.vsix",
      "files": [
        "dist/**/*.*"
      ],
      "dependencies": [
        "build",
        "extension-files"
      ],
      "output": [
        "debugger.vsix"
      ],
      "clean": true
    }
  },
  "repository": {
    "directory": "packages/breadboard-extension",
    "type": "git",
    "url": "git+https://github.com/breadboard-ai/breadboard.git"
  },
  "keywords": [],
  "author": "Google Labs Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/breadboard-ai/breadboard/issues"
  },
  "homepage": "https://github.com/breadboard-ai/breadboard#readme",
  "dependencies": {
    "@google-labs/breadboard": "^0.15.0",
    "@google-labs/core-kit": "^0.5.3",
    "@google-labs/json-kit": "^0.1.4",
    "@google-labs/node-nursery-web": "^1.0.7",
    "@google-labs/palm-kit": "^0.0.9",
    "@google-labs/template-kit": "^0.2.4",
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.87.0",
    "@vscode/debugadapter": "^1.65.0",
    "@vscode/vsce": "^2.24.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.1",
    "mermaid": "^10.9.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
