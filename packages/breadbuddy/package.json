{
  "private": true,
  "version": "0.0.8",
  "type": "module",
  "name": "@google-labs/breadbuddy",
  "publishConfig": {
    "registry": "https://wombat-dressing-room.appspot.com"
  },
  "description": "Google Labs repo for making app prototypes from a Breadboard",
  "scripts": {
    "prepack": "npm run build",
    "dev": "wireit",
    "build": "wireit",
    "build:vite": "wireit",
    "lint": "wireit"
  },
  "main": "./dist/src/web/index.js",
  "wireit": {
    "build": {
      "dependencies": [
        "build:vite"
      ]
    },
    "typescript-files-and-deps": {
      "dependencies": [],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ]
    },
    "build:vite": {
      "command": "vite build",
      "env": {
        "FORCE_COLOR": "1"
      },
      "dependencies": [
        "../breadboard:build",
        "typescript-files-and-deps"
      ],
      "files": [
        "vite.config.ts",
        ".env",
        "src/web/index.html"
      ],
      "output": [
        "dist/"
      ]
    },
    "dev": {
      "command": "vite",
      "service": true,
      "dependencies": [
        {
          "script": "typescript-files-and-deps",
          "cascade": false
        }
      ],
      "files": [
        "vite.config.ts"
      ]
    },
    "lint": {
      "command": "eslint . --ext .ts",
      "env": {
        "FORCE_COLOR": "1"
      },
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "../../.eslintrc.json"
      ],
      "output": []
    }
  },
  "keywords": [],
  "author": "Google Labs Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "@google-labs/tsconfig": "^0.0.1",
    "@types/node": "^20.11.30",
    "@types/nunjucks": "^3.2.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.20.0",
    "vite": "^5.1.5",
    "vite-plugin-full-reload": "^1.1.0",
    "vite-plugin-watch-and-run": "^1.5.1",
    "vitest": "^1.3.1",
    "wireit": "^0.14.4"
  },
  "dependencies": {
    "@google-labs/breadboard": "^0.14.0",
    "@lit/task": "^1.0.0",
    "jszip": "^3.10.1",
    "lit": "^3.1.1",
    "nunjucks": "^3.2.4"
  }
}
