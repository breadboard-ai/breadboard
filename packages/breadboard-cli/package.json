{
  "name": "@google-labs/breadboard-cli",
  "version": "0.1.0",
  "description": "A suite of tools for interacting with the Breadboard.",
  "bin": {
    "breadboard": "dist/src/index.js"
  },
  "main": "./dist/src/index.js",
  "exports": "./dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "wireit",
    "build": "wireit",
    "build:tsc": "wireit",
    "lint": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "../breadboard:build",
        "build:tsc",
        "build:breadboard-web"
      ]
    },
    "build:tsc": {
      "command": "tsc -b && chmod +x dist/src/index.js",
      "env": {
        "FORCE_COLOR": "1"
      },
      "dependencies": [
        "../breadboard:build:tsc",
        "../llm-starter:build:tsc",
        "../core-kit:build:tsc"
      ],
      "files": [
        "src/**/*.js",
        "src/**/*.ts",
        "tests/**/*.ts",
        "tsconfig.json",
        "../../core/tsconfig/base.json"
      ],
      "output": [
        "dist/"
      ],
      "clean": "if-file-deleted"
    },
    "build:breadboard-web": {
      "command": "mkdir -p dist/ui && cp -r ../breadboard-web/dist/ dist/ui/",
      "env": {
        "FORCE_COLOR": "1"
      },
      "dependencies": [
        "../breadboard-web:build"
      ],
      "files": [
        "../breadboard-web/dist/**/*"
      ],
      "output": [
        "dist/ui/"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "ava",
      "env": {
        "FORCE_COLOR": "1"
      },
      "dependencies": [
        "build:tsc"
      ],
      "files": [],
      "output": []
    },
    "lint": {
      "command": "eslint . --ext .ts",
      "env": {
        "FORCE_COLOR": "1"
      },
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts"
      ],
      "output": []
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/breadboard-ai/breadboard.git"
  },
  "files": [
    "dist/src",
    "dist/ui"
  ],
  "ava": {
    "timeout": "30s",
    "files": [
      "tests/**/*.ts"
    ],
    "workerThreads": false,
    "typescript": {
      "rewritePaths": {
        "./": "dist/"
      },
      "compile": false
    }
  },
  "keywords": [],
  "author": "Google Labs Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/breadboard-ai/breadboard/issues"
  },
  "homepage": "https://github.com/breadboard-ai/breadboard#readme",
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@google-labs/tsconfig": "*",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.16.3",
    "@types/serve-handler": "^6.1.4",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "ava": "^5.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@google-labs/breadboard": "*",
    "@google-labs/core-kit": "*",
    "@google-labs/llm-starter": "*",
    "commander": "^11.1.0",
    "esbuild": "^0.19.9",
    "serve": "^14.2.1",
    "yaml": "^2.3.4"
  }
}
