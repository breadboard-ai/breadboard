{
  "name": "@google-labs/breadboard-website",
  "publishConfig": {
    "registry": "https://wombat-dressing-room.appspot.com"
  },
  "private": true,
  "version": "2.2.1",
  "description": "The public documentation website for Breadboard",
  "author": "Google Labs Team",
  "license": "Apache-2.0",
  "homepage": "https://github.com/breadboard-ai/breadboard#readme",
  "repository": {
    "directory": "packages/website",
    "type": "git",
    "url": "git+https://github.com/breadboard-ai/breadboard.git"
  },
  "bugs": {
    "url": "https://github.com/breadboard-ai/breadboard/issues"
  },
  "type": "module",
  "scripts": {
    "prepack": "npm run build",
    "build": "wireit",
    "build:prod": "wireit",
    "build:eleventy": "wireit",
    "build:tsc": "wireit",
    "serve": "wireit",
    "dev": "npm run serve --watch"
  },
  "wireit": {
    "typescript-files-and-deps": {
      "dependencies": [
        "../agent-kit:build",
        "../breadboard:build:tsc",
        "../breadboard-ui:build:tsc",
        "../build:build:tsc",
        "../core-kit:build:tsc",
        "../gemini-kit:build:tsc",
        "../google-drive-kit:build:tsc",
        "../json-kit:build:tsc",
        "../template-kit:build:tsc",
        "../palm-kit:build:tsc"
      ],
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "tsconfig.json",
        "../../core/tsconfig/base.json"
      ]
    },
    "build": {
      "dependencies": [
        "build:prod"
      ]
    },
    "build:prod": {
      "command": "mkdir -p dist/prod && cp -R dist/eleventy/ dist/prod/breadboard && cp -R src/static/ dist/prod/breadboard/static/ && cp -R dist/esbuild/ dist/prod/breadboard/js",
      "dependencies": [
        "build:eleventy",
        "build:esbuild"
      ],
      "files": [
        "src/static"
      ],
      "output": [
        "dist/prod/"
      ]
    },
    "build:eleventy": {
      "command": "eleventy --input=src/ --output=dist/eleventy/",
      "files": [
        "src/",
        "!src/js/",
        "!src/static/",
        "eleventy.config.cjs",
        "filter-toc.cjs",
        "filter-board.cjs"
      ],
      "output": [
        "dist/eleventy/"
      ]
    },
    "build:tsc": {
      "command": "tsc -b --pretty",
      "env": {
        "FORCE_COLOR": "1"
      },
      "files": [
        "src/js/",
        "tsconfig.json",
        "../../core/tsconfig/base.json"
      ],
      "output": [
        "dist/tsc/"
      ]
    },
    "build:esbuild": {
      "command": "./esbuild.mjs",
      "dependencies": [
        "typescript-files-and-deps"
      ],
      "files": [
        "src/**/*.ts"
      ],
      "output": [
        "dist/esbuild/"
      ]
    },
    "serve": {
      "command": "web-dev-server --config web-dev-server.config.mjs",
      "service": true,
      "dependencies": [
        "build:prod"
      ],
      "files": []
    }
  },
  "dependencies": {
    "@11ty/eleventy-plugin-vite": "^4.0.0",
    "@google-labs/agent-kit": "^0.7.0",
    "@google-labs/breadboard": "^0.20.0",
    "@google-labs/breadboard-ui": "^0.8.0",
    "@google-labs/core-kit": "^0.9.0",
    "@google-labs/gemini-kit": "^0.4.0",
    "@google-labs/json-kit": "^0.3.0",
    "@google-labs/palm-kit": "^0.0.14",
    "@google-labs/template-kit": "^0.3.2",
    "eleventy-plugin-youtube-embed": "^1.10.2",
    "esbuild": "^0.21.5",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@google-labs/tsconfig": "^0.0.1",
    "@koa/cors": "^5.0.0",
    "@web/dev-server": "^0.4.5",
    "@web/dev-server-esbuild": "^1.0.2",
    "jsdom": "^24.1.0",
    "lit": "^3.1.4",
    "markdown-it-github-alerts": "^0.3.0",
    "markdown-it-github-headings": "^2.0.1",
    "rollup-plugin-import-assert": "^3.0.1",
    "wireit": "^0.14.4"
  }
}
