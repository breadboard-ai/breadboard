{
  "name": "@google-labs/breadboard-website",
  "private": true,
  "version": "1.0.0",
  "description": "The public documentation website for Breadboard",
  "author": "Google Labs Team",
  "license": "Apache-2.0",
  "homepage": "https://github.com/breadboard-ai/breadboard#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/breadboard-ai/breadboard.git"
  },
  "bugs": {
    "url": "https://github.com/breadboard-ai/breadboard/issues"
  },
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:eleventy": "wireit",
    "serve": "wireit",
    "dev": "npm run serve --watch"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:js",
        "build:static",
        "build:eleventy"
      ]
    },
    "build:js": {
      "command": "tsc -b",
      "env": {
        "FORCE_COLOR": "1"
      },
      "files": [
        "src/js/",
        "tsconfig.json",
        "../../core/tsconfig/base.json"
      ],
      "output": [
        "_site/js/",
        "tsconfig.tsbuildinfo"
      ]
    },
    "build:static": {
      "command": "cp -R src/static _site",
      "files": [
        "src/static/"
      ],
      "output": [
        "_site/static/"
      ]
    },
    "build:eleventy": {
      "command": "eleventy --input=src/",
      "files": [
        "src/",
        "!src/js/",
        "!src/static/"
      ],
      "output": [
        "_site/",
        "!_site/js/",
        "!_site/static/"
      ]
    },
    "serve": {
      "command": "web-dev-server --root-dir _site/ --node-resolve --watch",
      "service": true,
      "dependencies": [
        {
          "script": "build",
          "cascade": false
        }
      ],
      "files": []
    }
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "lit": "^3.1.1"
  },
  "devDependencies": {
    "@web/dev-server": "^0.4.1"
  }
}
