{
  "name": "@breadboard-ai/opal-shell",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/breadboard-ai/breadboard.git",
    "directory": "packages/opal-shell"
  },
  "license": "Apache-2.0",
  "author": "Google Labs Team",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    "./*.js": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "wireit",
    "build:protocol": "wireit",
    "build:host": "wireit",
    "build:guest": "wireit",
    "build:server": "wireit",
    "start": "npm run serve --watch",
    "serve": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:protocol",
        "build:host",
        "build:host:bundle",
        "build:guest",
        "build:server"
      ]
    },
    "check:types": {
      "dependencies": [
        "build:protocol",
        "build:host",
        "build:guest",
        "build:server"
      ]
    },
    "build:protocol": {
      "command": "tsc --project tsconfig.protocol.json",
      "files": [
        "src/protocol",
        "tsconfig.base.json",
        "tsconfig.protocol.json"
      ],
      "output": [
        "dist/protocol",
        "tsconfig.protocol.tsbuildinfo"
      ],
      "dependencies": []
    },
    "build:host": {
      "command": "tsc --project tsconfig.host.json",
      "files": [
        "src/host",
        "tsconfig.base.json",
        "tsconfig.host.json"
      ],
      "output": [
        "dist/host",
        "tsconfig.host.tsbuildinfo"
      ],
      "dependencies": [
        "build:protocol"
      ]
    },
    "build:host:bundle": {
      "command": "esbuild src/host/opal-shell-host.ts --bundle --outfile=dist/host_bundled/opal-shell-host.js --format=esm",
      "files": [
        "src/host",
        "tsconfig.base.json",
        "tsconfig.host.json"
      ],
      "output": [
        "dist/host_bundled"
      ],
      "dependencies": []
    },
    "build:guest": {
      "command": "tsc --project tsconfig.guest.json",
      "files": [
        "src/guest",
        "tsconfig.base.json",
        "tsconfig.guest.json"
      ],
      "output": [
        "dist/guest",
        "tsconfig.guest.tsbuildinfo"
      ],
      "dependencies": [
        "build:protocol"
      ]
    },
    "build:server": {
      "command": "tsc --project tsconfig.server.json",
      "files": [
        "src/server",
        "tsconfig.base.json",
        "tsconfig.server.json"
      ],
      "output": [
        "dist/server",
        "tsconfig.server.tsbuildinfo"
      ],
      "dependencies": []
    },
    "serve": {
      "command": "node dist/server/opal-shell-server.js",
      "env": {
        "DEV": "true"
      },
      "service": true,
      "files": [
        "package.json"
      ],
      "dependencies": [
        "build:server",
        {
          "script": "build:host:bundle",
          "cascade": false
        }
      ]
    }
  },
  "dependencies": {
    "@lit/context": "^1.1.4",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.0",
    "comlink": "^4.4.2",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/livereload": "^0.9.5",
    "esbuild": "^0.25.5",
    "livereload": "^0.10.3"
  }
}
