{
  "name": "@google-labs/team-kit",
  "publishConfig": {
    "registry": "https://wombat-dressing-room.appspot.com"
  },
  "version": "0.1.0",
  "description": "A Breadboard kit containing nodes to organize teams of synthetic workers",
  "main": "./dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./team.kit.json": "./team.kit.json"
  },
  "types": "dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "prepack": "npm run build",
    "dev": "wireit",
    "test": "wireit",
    "build": "wireit",
    "lint": "wireit"
  },
  "wireit": {
    "dev": {
      "command": "breadboard debug src/boards --watch",
      "dependencies": [
        "build",
        "../breadboard-cli:build"
      ]
    },
    "generate-kit-manifest": {
      "command": "tsx src/generate-kit-manifest.ts",
      "dependencies": [
        "build:tsc"
      ],
      "files": [
        "src/generate-kit-manifest.ts"
      ],
      "output": [
        "team.kit.json"
      ]
    },
    "build": {
      "dependencies": [
        "../breadboard:build",
        "../core-kit:build",
        "../json-kit:build",
        "../agent-kit:build",
        "../template-kit:build",
        "../gemini-kit:build",
        "build:tsc",
        "generate-kit-manifest"
      ]
    },
    "build:tsc": {
      "command": "tsc -b --pretty",
      "env": {
        "FORCE_COLOR": "1"
      },
      "dependencies": [
        "../breadboard:build:tsc",
        "../core-kit:build:tsc",
        "../json-kit:build:tsc",
        "../template-kit:build:tsc",
        "../gemini-kit:build:tsc",
        "../agent-kit:build:tsc"
      ],
      "files": [
        "src/**/*.ts",
        "!src/samples/**/*.ts",
        "tests/**/*.ts",
        "tsconfig.json",
        "../../core/tsconfig/base.json"
      ],
      "output": [
        "dist/",
        "!dist/**/*.min.js{,.map}"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "ava",
      "env": {
        "FORCE_COLOR": "1"
      },
      "dependencies": [
        "build:tsc"
      ],
      "files": [],
      "output": []
    },
    "lint": {
      "command": "eslint . --ext .ts",
      "env": {
        "FORCE_COLOR": "1"
      },
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts",
        ".eslintrc",
        "../../.eslintrc.json"
      ],
      "output": []
    }
  },
  "repository": {
    "directory": "packages/team-kit",
    "type": "git",
    "url": "https://github.com/breadboard-ai/breadboard.git"
  },
  "files": [
    "dist/src"
  ],
  "ava": {
    "timeout": "30s",
    "files": [
      "tests/**/*.ts"
    ],
    "workerThreads": false,
    "typescript": {
      "rewritePaths": {
        "./": "dist/"
      },
      "compile": false
    }
  },
  "keywords": [],
  "author": "Google Labs Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/breadboard-ai/breadboard/issues"
  },
  "homepage": "https://github.com/breadboard-ai/breadboard#readme",
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@google-labs/agent-kit": "^0.6.0",
    "@google-labs/breadboard": "^0.19.0",
    "@google-labs/core-kit": "^0.8.1",
    "@google-labs/gemini-kit": "^0.3.1",
    "@google-labs/json-kit": "^0.2.2",
    "@google-labs/template-kit": "^0.3.1",
    "@google-labs/tsconfig": "^0.0.1",
    "@types/node": "^20.12.9",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "ava": "^5.2.0",
    "tsx": "^4.9.3",
    "typescript": "^5.4.5"
  }
}
