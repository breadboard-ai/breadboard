{
  "name": "@breadboard-ai/board-server",
  "publishConfig": {
    "registry": "https://wombat-dressing-room.appspot.com"
  },
  "private": true,
  "version": "0.13.0",
  "description": "Board Server",
  "main": "./dist/server/index.js",
  "exports": {
    ".": "./dist/lib/src/server.js"
  },
  "type": "module",
  "scripts": {
    "start": "node .",
    "prepack": "npm run build",
    "build": "wireit",
    "build:lib": "wireit",
    "build:esbuild": "wireit",
    "build:docker": "docker build --build-context breadboard=../../ -t board-server .",
    "deploy": "npm run build && gcloud app deploy",
    "deploy:gcr": "npm run build && gcloud run deploy --source .",
    "add": "tsx scripts/create-account.ts",
    "serve": "wireit",
    "dev": "npm run dev:nowatch --watch",
    "dev:nowatch": "wireit",
    "test": "find src -name '*.test.ts' | xargs tsx --test --test-reporter=spec",
    "test:firestore": "firebase emulators:exec 'tsx --test --test-reporter=spec tests/firestore/*.test.ts'"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:esbuild",
        "build:lib"
      ]
    },
    "build:lib": {
      "dependencies": [
        "build:tsc"
      ]
    },
    "build:tsc": {
      "command": "tsc -b tsconfig.lib.json --pretty",
      "env": {
        "FORCE_COLOR": "1"
      },
      "files": [],
      "output": [
        "dist/lib"
      ],
      "dependencies": [
        "typescript-server-files-and-deps"
      ],
      "clean": "if-file-deleted"
    },
    "typescript-server-files-and-deps": {
      "files": [
        "src/index.ts",
        "src/router.ts",
        "src/server.ts",
        "src/server/**/*.ts",
        "tsconfig.json",
        "package.json"
      ],
      "dependencies": [
        "<dependencies>#build",
        "../agent-kit#build",
        "../core-kit#build",
        "../json-kit#build",
        "../template-kit#build"
      ]
    },
    "build:esbuild": {
      "command": "tsx scripts/build.ts",
      "files": [
        "scripts/build.ts"
      ],
      "output": [
        "dist/server",
        "dist/scripts"
      ],
      "dependencies": [
        "typescript-server-files-and-deps"
      ],
      "clean": "if-file-deleted"
    },
    "serve": {
      "service": true,
      "command": "node .",
      "dependencies": [
        "build"
      ]
    },
    "dev:nowatch": {
      "command": "export GOOGLE_CLOUD_PROJECT=$(gcloud config get-value project) && node .",
      "service": true,
      "env": {
        "SERVER_URL": "http://localhost:3000"
      },
      "dependencies": [
        "build",
        {
          "script": "../visual-editor#serve",
          "cascade": false
        }
      ]
    },
    "update-sandbox-runtime": {
      "command": "tsx scripts/update-sandbox-runtime.ts",
      "dependencies": [
        "../jsandbox#build"
      ],
      "files": [
        "src/update-sandbox-runtime.ts"
      ],
      "output": [
        "public/sandbox.wasm"
      ]
    }
  },
  "repository": {
    "directory": "packages/board-server",
    "type": "git",
    "url": "https://github.com/breadboard-ai/breadboard.git"
  },
  "files": [
    "dist/src"
  ],
  "keywords": [],
  "author": "Google Labs Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/breadboard-ai/breadboard/issues"
  },
  "homepage": "https://github.com/breadboard-ai/breadboard#readme",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.25.1",
    "eslint": "^8.57.1",
    "firebase-tools": "^13.34.0",
    "supertest": "^7.0.0",
    "typescript": "^5.8.2",
    "wireit": "^0.15.0-pre.1"
  },
  "dependencies": {
    "@breadboard-ai/connection-client": "0.2.0",
    "@breadboard-ai/data-store": "0.3.2",
    "@breadboard-ai/google-drive-kit": "0.5.1",
    "@breadboard-ai/jsandbox": "0.5.0",
    "@breadboard-ai/types": "0.6.0",
    "@google-cloud/firestore": "^7.11.0",
    "@google-cloud/secret-manager": "^6.0.0",
    "@google-cloud/storage": "^7.15.2",
    "@google-labs/breadboard": "^0.33.0",
    "@lit/context": "^1.1.4",
    "@types/express": "^5.0.0",
    "better-sqlite3": "^11.9.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "lit": "^3.2.1",
    "uuid": "^11.1.0"
  }
}
