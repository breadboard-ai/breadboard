{
  "name": "@breadboard-ai/board-server",
  "publishConfig": {
    "registry": "https://wombat-dressing-room.appspot.com"
  },
  "private": true,
  "version": "0.12.0",
  "description": "Board Server",
  "main": "./dist/server/index.js",
  "exports": {
    ".": "./dist/lib/src/index.js",
    "./router": "./dist/lib/src/router.js"
  },
  "type": "module",
  "scripts": {
    "start": "node .",
    "prepack": "npm run build",
    "build": "wireit",
    "build:lib": "wireit",
    "build:vite": "wireit",
    "build:esbuild": "wireit",
    "build:tests": "wireit",
    "build:docker": "docker build --build-context breadboard=../../ -t board-server .",
    "deploy": "npm run build && gcloud app deploy",
    "deploy:gcr": "npm run build && gcloud run deploy --source .",
    "add": "tsx scripts/create-account.ts",
    "serve": "wireit",
    "dev": "npm run dev:nowatch --watch",
    "dev:nowatch": "wireit",
    "test": "wireit",
    "test:integration": "wireit",
    "express": "tsx src/express/server.ts"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:vite",
        "build:esbuild",
        "build:lib"
      ]
    },
    "build:lib": {
      "dependencies": [
        "build:vite",
        "build:tsc"
      ]
    },
    "build:vite": {
      "command": "vite build",
      "files": [
        "*.html",
        "vite.config.ts",
        "package.json",
        "src/app/**/*.ts",
        ".env.development",
        ".env.production"
      ],
      "output": [
        "dist/client"
      ],
      "dependencies": [
        "update-sandbox-runtime",
        "../breadboard:build:tsc",
        "../data-store:build:tsc",
        "../agent-kit:build:tsc",
        "../core-kit:build:tsc",
        "../google-drive-kit:build:tsc",
        "../jsandbox:build:tsc",
        "../json-kit:build:tsc",
        "../template-kit:build:tsc",
        "../shared-ui:build:tsc",
        "../visual-editor:build"
      ],
      "clean": "if-file-deleted"
    },
    "build:tsc": {
      "command": "tsc -b tsconfig.lib.json --pretty",
      "env": {
        "FORCE_COLOR": "1"
      },
      "files": [],
      "output": [
        "dist/lib"
      ],
      "dependencies": [
        "typescript-server-files-and-deps"
      ],
      "clean": "if-file-deleted"
    },
    "typescript-server-files-and-deps": {
      "files": [
        "src/index.ts",
        "src/router.ts",
        "src/server.ts",
        "src/server/**/*.ts",
        "tsconfig.json",
        "package.json"
      ],
      "dependencies": [
        "../breadboard:build",
        "../data-store:build",
        "../agent-kit:build",
        "../core-kit:build",
        "../json-kit:build",
        "../template-kit:build",
        "../google-drive-kit:build",
        "../jsandbox:build"
      ]
    },
    "build:esbuild": {
      "command": "tsx scripts/build.ts",
      "files": [
        "scripts/build.ts"
      ],
      "output": [
        "dist/server",
        "dist/scripts"
      ],
      "dependencies": [
        "typescript-server-files-and-deps"
      ],
      "clean": "if-file-deleted"
    },
    "serve": {
      "service": true,
      "command": "node .",
      "dependencies": [
        "build"
      ]
    },
    "dev:nowatch": {
      "command": "export GOOGLE_CLOUD_PROJECT=$(gcloud config get-value project) && node .",
      "service": true,
      "env": {
        "ALLOWED_ORIGINS": "http://localhost:5173",
        "SERVER_URL": "http://localhost:3000"
      },
      "dependencies": [
        "build",
        {
          "script": "../visual-editor:serve",
          "cascade": false
        }
      ]
    },
    "build:tests": {
      "command": "tsc -b tsconfig.test.json --pretty",
      "env": {
        "FORCE_COLOR": "1"
      },
      "dependencies": [
        "../breadboard:build:tsc",
        "../data-store:build:tsc",
        "../agent-kit:generate-kit-manifest",
        "../core-kit:build:tsc",
        "../json-kit:build:tsc",
        "../template-kit:build:tsc",
        "../shared-ui:build:tsc"
      ],
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "tests/*.json",
        "tests/boards/*.bgl.json",
        "tsconfig.test.json",
        "../../core/tsconfig/base.json"
      ],
      "output": [
        "dist_test/"
      ],
      "clean": "if-file-deleted"
    },
    "clear:testdb": {
      "command": "rm -f test.db"
    },
    "test": {
      "command": "node --test --enable-source-maps --test-reporter spec dist_test/tests/*.js",
      "dependencies": [
        "build:tests"
      ],
      "files": [],
      "output": []
    },
    "test:integration": {
      "command": "export GOOGLE_APPLICATION_CREDENTIALS=foo && export GOOGLE_CLOUD_PROJECT=foo && export STORAGE_BACKEND=sqlite && export SQLITE_DB_PATH=test.db && node --test --enable-source-maps --test-reporter tap dist/tests/integration/board-api.test.js",
      "dependencies": [
        "build:tests",
        "build:vite",
        "clear:testdb"
      ],
      "files": [],
      "output": []
    },
    "update-sandbox-runtime": {
      "command": "tsx src/update-sandbox-runtime.ts",
      "dependencies": [
        "../jsandbox:build"
      ],
      "files": [
        "src/update-sandbox-runtime.ts"
      ],
      "output": [
        "public/sandbox.wasm"
      ]
    }
  },
  "repository": {
    "directory": "packages/board-server",
    "type": "git",
    "url": "https://github.com/breadboard-ai/breadboard.git"
  },
  "files": [
    "dist/src"
  ],
  "keywords": [],
  "author": "Google Labs Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/breadboard-ai/breadboard/issues"
  },
  "homepage": "https://github.com/breadboard-ai/breadboard#readme",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.1",
    "typescript": "^5.7.3",
    "wireit": "^0.14.11"
  },
  "dependencies": {
    "@breadboard-ai/connection-client": "0.2.0",
    "@breadboard-ai/data-store": "0.3.1",
    "@breadboard-ai/google-drive-kit": "0.5.0",
    "@breadboard-ai/jsandbox": "0.4.0",
    "@breadboard-ai/types": "0.5.0",
    "@google-cloud/firestore": "^7.11.0",
    "@google-cloud/secret-manager": "^5.6.0",
    "@google-cloud/storage": "^7.15.1",
    "@google-labs/breadboard": "^0.32.0",
    "@lit/context": "^1.1.3",
    "@types/express": "^5.0.0",
    "better-sqlite3": "^11.8.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "lit": "^3.2.1",
    "uuid": "^11.0.5",
    "vite": "^6.1.0"
  }
}
