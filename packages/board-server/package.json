{
  "name": "@breadboard-ai/board-server",
  "publishConfig": {
    "registry": "https://wombat-dressing-room.appspot.com"
  },
  "private": true,
  "version": "0.16.0",
  "description": "Board Server",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/server.js"
  },
  "type": "module",
  "scripts": {
    "start": "node .",
    "prepack": "npm run build",
    "build": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:tsc"
      ]
    },
    "build:tsc": {
      "command": "tsc -b tsconfig.json --pretty",
      "env": {
        "FORCE_COLOR": "1"
      },
      "files": [],
      "output": [
        "dist/"
      ],
      "dependencies": [
        "typescript-server-files-and-deps"
      ],
      "clean": "if-file-deleted"
    },
    "typescript-server-files-and-deps": {
      "files": [
        "src/index.ts",
        "src/router.ts",
        "src/server.ts",
        "src/server/**/*.ts",
        "tsconfig.json",
        "package.json"
      ],
      "dependencies": [
        "<dependencies>#build"
      ]
    },
    "test": {
      "command": "find src -name '*.test.ts' | xargs tsx --test --test-reporter=spec",
      "files": [],
      "output": [],
      "dependencies": [
        "build:tsc"
      ]
    }
  },
  "repository": {
    "directory": "packages/board-server",
    "type": "git",
    "url": "https://github.com/breadboard-ai/breadboard.git"
  },
  "files": [
    "dist/src"
  ],
  "keywords": [],
  "author": "Google Labs Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/breadboard-ai/breadboard/issues"
  },
  "homepage": "https://github.com/breadboard-ai/breadboard#readme",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "supertest": "^7.1.0",
    "typescript": "^5.8.3",
    "wireit": "^0.15.0-pre.2"
  },
  "dependencies": {
    "@breadboard-ai/data-store": "0.5.0",
    "@breadboard-ai/google-drive-kit": "0.8.0",
    "@breadboard-ai/runtime": "0.2.0",
    "@breadboard-ai/types": "0.9.0",
    "@breadboard-ai/utils": "0.1.0",
    "@google-cloud/firestore": "^7.11.0",
    "@google-cloud/storage": "^7.15.2",
    "@google-labs/breadboard": "^0.36.0",
    "@google-labs/core-kit": "^0.19.2",
    "@types/express": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "lit": "^3.3.1",
    "uuid": "^11.1.0"
  }
}
