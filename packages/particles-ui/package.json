{
  "name": "@breadboard-ai/particles-ui",
  "version": "0.2.0",
  "description": "Particle UI",
  "main": "./dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js"
  },
  "types": "dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "prepack": "npm run build",
    "build": "wireit",
    "build:esbuild": "wireit",
    "build:tsc": "wireit",
    "lint": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:tsc"
      ]
    },
    "build:tsc": {
      "command": "tsc -b --pretty",
      "dependencies": [
        "<dependencies>#<this>"
      ],
      "env": {
        "FORCE_COLOR": "1"
      },
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "tsconfig.json",
        "../../core/tsconfig/base.json"
      ],
      "output": [
        "dist/",
        "!dist/**/*.min.js{,.map}"
      ],
      "clean": "if-file-deleted"
    },
    "build:esbuild": {
      "command": "esbuild tests/**/*.browser.test.ts --bundle --outdir=bundled --target=esnext --format=esm --external:node*",
      "env": {
        "FORCE_COLOR": "1"
      },
      "dependencies": [
        "build:tsc"
      ],
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "tsconfig.json",
        "../../core/tsconfig/base.json"
      ],
      "output": [
        "bundled"
      ],
      "clean": true
    },
    "lint": {
      "command": "eslint . --ext .ts",
      "env": {
        "FORCE_COLOR": "1"
      },
      "dependencies": [
        "build:tsc"
      ],
      "files": [
        ".eslintrc",
        "../../.eslintrc.json"
      ],
      "output": []
    }
  },
  "repository": {
    "directory": "packages/particles-ui",
    "type": "git",
    "url": "git+https://github.com/breadboard-ai/breadboard.git"
  },
  "files": [
    "dist/src",
    "dist/*.js",
    "dist/*.js.map"
  ],
  "keywords": [],
  "author": "Google Labs Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/breadboard-ai/breadboard/issues"
  },
  "homepage": "https://github.com/breadboard-ai/breadboard/tree/main/packages/particles-ui#readme",
  "devDependencies": {
    "@google-labs/tsconfig": "^0.0.2",
    "esbuild": "^0.25.5",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.14.0"
  },
  "dependencies": {
    "@breadboard-ai/particles": "0.2.0",
    "@breadboard-ai/types": "0.9.0",
    "@google-labs/breadboard": "^0.36.0",
    "@material/material-color-utilities": "^0.3.0",
    "@lit-labs/signals": "^0.1.3",
    "@lit/context": "^1.1.4",
    "@lit/task": "^1.0.2",
    "markdown-it": "^14.1.0",
    "pdfjs-dist": "^5.2.133",
    "signal-polyfill": "^0.2.2",
    "signal-utils": "^0.21.1"
  }
}
