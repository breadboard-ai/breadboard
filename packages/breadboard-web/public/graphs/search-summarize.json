{
  "title": "The Search Summarizer Board",
  "description": "A simple AI pattern that first uses Google Search to find relevant bits of information and then summarizes them using LLM.",
  "version": "0.1.1",
  "edges": [
    {
      "from": "generator",
      "to": "output-4",
      "out": "text",
      "in": "text"
    },
    {
      "from": "parameters",
      "to": "customSearchURL",
      "out": "text",
      "in": "query"
    },
    {
      "from": "parameters",
      "to": "summarizing-template",
      "out": "text",
      "in": "question"
    },
    {
      "from": "parameters",
      "to": "generator",
      "out": "generator",
      "in": "path"
    },
    {
      "from": "summarizing-template",
      "to": "generator",
      "out": "prompt",
      "in": "text"
    },
    {
      "from": "customSearchURL",
      "to": "search",
      "out": "url",
      "in": "url"
    },
    {
      "from": "getSnippets",
      "to": "summarizing-template",
      "out": "result",
      "in": "context"
    },
    {
      "from": "secrets-3",
      "to": "customSearchURL",
      "out": "*",
      "in": ""
    },
    {
      "from": "search",
      "to": "getSnippets",
      "out": "response",
      "in": "json"
    }
  ],
  "nodes": [
    {
      "id": "output-4",
      "type": "output",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "title": "Answer",
              "description": "The answer to the query"
            }
          },
          "required": [
            "text"
          ]
        }
      }
    },
    {
      "id": "generator",
      "type": "invoke",
      "configuration": {}
    },
    {
      "id": "parameters",
      "type": "input",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "title": "Query",
              "description": "What would you like to search for?"
            },
            "generator": {
              "type": "string",
              "title": "Generator",
              "description": "The URL of the generator to call",
              "default": "text-generator.json"
            }
          },
          "required": [
            "text"
          ]
        }
      }
    },
    {
      "id": "summarizing-template",
      "type": "promptTemplate",
      "configuration": {
        "template": "Use context below to answer this question:\n\n##Question:\n{{question}}\n\n## Context {{context}}\n\\n## Answer:\n"
      }
    },
    {
      "id": "customSearchURL",
      "type": "urlTemplate",
      "configuration": {
        "template": "https://www.googleapis.com/customsearch/v1?key={API_KEY}&cx={GOOGLE_CSE_ID}&q={query}"
      }
    },
    {
      "id": "getSnippets",
      "type": "jsonata",
      "configuration": {
        "expression": "$join(items.snippet, '\n')"
      }
    },
    {
      "id": "secrets-3",
      "type": "secrets",
      "configuration": {
        "keys": [
          "API_KEY",
          "GOOGLE_CSE_ID"
        ]
      }
    },
    {
      "id": "search",
      "type": "fetch",
      "configuration": {}
    }
  ],
  "graphs": {}
}