{
  "title": "Retry",
  "description": "Run `board` up to `tries` (default 5) times, appending prior attempts and error messages to the prompt.",
  "version": "0.0.1",
  "edges": [
    {
      "from": "parameters",
      "to": "generatorCaller",
      "constant": true,
      "out": "generator",
      "in": "path"
    },
    {
      "from": "dontUseStreaming",
      "to": "generatorCaller",
      "out": "useStreaming",
      "in": "useStreaming"
    },
    {
      "from": "parameters",
      "to": "countdown",
      "out": "tries",
      "in": "tries"
    },
    {
      "from": "countdown",
      "to": "countdown",
      "out": "tries",
      "in": "tries"
    },
    {
      "from": "parameters",
      "to": "retryPrompt",
      "out": "text",
      "in": "text"
    },
    {
      "from": "retryPrompt",
      "to": "retryPrompt",
      "out": "prompt",
      "in": "text"
    },
    {
      "from": "parameters",
      "to": "generatorCaller",
      "out": "text",
      "in": "text"
    },
    {
      "from": "generatorCaller",
      "to": "outputSuccess",
      "out": "*"
    },
    {
      "from": "generatorCaller",
      "to": "countdown",
      "out": "$error",
      "in": "data"
    },
    {
      "from": "countdown",
      "to": "outputError",
      "out": "done",
      "in": "$error"
    },
    {
      "from": "countdown",
      "to": "errorParser",
      "out": "data",
      "in": "json"
    },
    {
      "from": "errorParser",
      "to": "retryPrompt",
      "out": "error",
      "in": "error"
    },
    {
      "from": "errorParser",
      "to": "retryPrompt",
      "out": "completion",
      "in": "completion"
    },
    {
      "from": "retryPrompt",
      "to": "generatorCaller",
      "out": "prompt",
      "in": "text"
    }
  ],
  "nodes": [
    {
      "id": "parameters",
      "type": "input",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "title": "Original",
              "description": "The original prompt"
            },
            "tries": {
              "type": "number",
              "title": "Tries",
              "description": "The number of tries to attempt to fix the problem",
              "default": "5"
            },
            "generator": {
              "type": "board",
              "title": "Board",
              "description": "The board to retry.",
              "default": "/graphs/text-generator.json"
            }
          },
          "required": [
            "text",
            "gnerator",
            "validator"
          ]
        }
      }
    },
    {
      "id": "outputSuccess",
      "type": "output",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "additionalProperties": true
          },
          "description": "The output of the lambda"
        }
      }
    },
    {
      "id": "outputError",
      "type": "output",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "$error": {
              "type": "object"
            }
          }
        }
      }
    },
    {
      "id": "generatorCaller",
      "type": "invoke"
    },
    {
      "id": "dontUseStreaming",
      "type": "passthrough",
      "configuration": {
        "useStreaming": false
      }
    },
    {
      "id": "countdown",
      "type": "jsonata",
      "configuration": {
        "expression": "{ \"tries\": tries - 1, (tries > 0 ? \"data\" : \"done\") : data }",
        "tries": 5,
        "raw": true
      }
    },
    {
      "id": "errorParser",
      "type": "jsonata",
      "configuration": {
        "expression": "{ \"error\": $exists(error.stack) ? error.stack : error.message, \"completion\": inputs.completion }",
        "raw": true
      }
    },
    {
      "id": "retryPrompt",
      "type": "promptTemplate",
      "configuration": {
        "template": "{{text}}{{completion}}\n\nThis error occured:\n{{error}}\n\nPlease try again:\n"
      }
    }
  ],
  "kits": [
    {
      "url": "npm:@google-labs/llm-starter"
    },
    {
      "url": "npm:@google-labs/core-kit"
    }
  ]
}