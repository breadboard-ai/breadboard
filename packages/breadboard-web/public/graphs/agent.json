{
  "title": "Agent",
  "description": "A prototype of an agent-like board",
  "version": "0.0.1",
  "edges": [
    {
      "from": "assemble",
      "to": "output-2",
      "out": "result",
      "in": "context"
    },
    {
      "from": "generate",
      "to": "assemble",
      "out": "context",
      "in": "generated"
    },
    {
      "from": "input-1",
      "to": "generate",
      "out": "text",
      "in": "text"
    },
    {
      "from": "input-1",
      "to": "generate",
      "out": "context",
      "in": "context"
    },
    {
      "from": "input-1",
      "to": "generate",
      "out": "generator",
      "in": "path"
    },
    {
      "from": "input-1",
      "to": "assemble",
      "out": "text",
      "in": "text"
    },
    {
      "from": "input-1",
      "to": "assemble",
      "out": "context",
      "in": "context"
    }
  ],
  "nodes": [
    {
      "id": "output-2",
      "type": "output",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "context": {
              "title": "result",
              "description": "The result of the Jsonata expression",
              "type": "string"
            }
          },
          "required": [
            "context"
          ]
        }
      }
    },
    {
      "id": "assemble",
      "type": "jsonata",
      "configuration": {
        "expression": "$append(context ? context, $append([\n      {\n          \"role\": \"user\",\n          \"parts\": [ { \"text\": text } ]\n      }\n  ], [generated]))"
      }
    },
    {
      "id": "generate",
      "type": "invoke",
      "configuration": {}
    },
    {
      "id": "input-1",
      "type": "input",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "text": {
              "title": "Text",
              "examples": [
                "\n  You are a brilliant poet who specializes in two-line rhyming poems.\n  Given any topic, you can quickly whip up a two-line rhyming poem about it.\n  Ready?\n  \n  The topic is: the universe within us"
              ],
              "format": "multiline",
              "type": "string"
            },
            "context": {
              "title": "Context",
              "type": "array",
              "examples": [
                "[]"
              ]
            },
            "generator": {
              "title": "Generator",
              "description": "The path to the board to invoke.",
              "type": "string",
              "examples": [
                "gemini-generator.json"
              ]
            }
          },
          "required": [
            "text",
            "context",
            "generator"
          ]
        }
      }
    }
  ],
  "graphs": {}
}