{
  "title": "Single turn",
  "description": "A single conversation turn: a combination of a simple agent and a user input",
  "version": "0.0.1",
  "edges": [
    {
      "from": "askUser",
      "to": "assistant",
      "out": "context",
      "in": "context"
    },
    {
      "from": "assistant",
      "to": "output-2",
      "out": "context",
      "in": "context"
    },
    {
      "from": "input-1",
      "to": "askUser",
      "out": "context",
      "in": "context"
    }
  ],
  "nodes": [
    {
      "id": "input-1",
      "type": "input",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "context": {
              "type": "array",
              "title": "Context",
              "examples": [
                "[]"
              ]
            }
          },
          "required": [
            "context"
          ]
        }
      }
    },
    {
      "id": "output-2",
      "type": "output",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "context": {
              "type": "string",
              "title": "context"
            }
          }
        }
      }
    },
    {
      "id": "askUser",
      "type": "invoke",
      "configuration": {
        "$board": "ask-user.json",
        "description": "Type here to chat with the assistant",
        "title": "User"
      }
    },
    {
      "id": "assistant",
      "type": "invoke",
      "configuration": {
        "$board": "agent.json"
      }
    }
  ]
}