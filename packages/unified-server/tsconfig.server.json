{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["ES2022"],
    "module": "NodeNext",
    "rootDir": ".",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/server.tsbuildinfo",
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["src/server/**/*", "tests/**/*"]
}
