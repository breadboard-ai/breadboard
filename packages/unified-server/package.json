{
  "name": "@breadboard-ai/unified-server",
  "publishConfig": {
    "registry": "https://wombat-dressing-room.appspot.com"
  },
  "private": true,
  "version": "0.0.1",
  "description": "serves visual editor, board server, and connection server from a single origin",
  "main": "./dist/src/server/main.js",
  "exports": "./dist/src/server/main.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:tsc": "wireit",
    "build:vite": "wireit",
    "copy-assets": "wireit",
    "dev": "wireit",
    "lint": "FORCE_COLOR=1 eslint . --ext .ts",
    "start": "NODE_ENV=production node .",
    "test": "wireit",
    "watch": "FORCE_COLOR=1 tsc --b --watch"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:vite",
        "build:tsc"
      ]
    },
    "build:vite": {
      "command": "vite build",
      "dependencies": [
        "copy-assets",
        "../visual-editor:build"
      ]
    },
    "build:tsc": {
      "command": "tsc",
      "dependencies": [
        "../connection-server:build"
      ]
    },
    "dev": {
      "command": "tsx src/server/main.ts",
      "service": true
    },
    "test": {
      "command": "ava",
      "dependencies": [
        "build:tsc"
      ]
    },
    "copy-assets": {
      "command": "tsx scripts/copy-assets.ts",
      "dependencies": [
        "../jsandbox:build",
        "../visual-editor:build"
      ],
      "files": [
        "scripts/copy-assets.ts"
      ],
      "output": [
        "public"
      ]
    }
  },
  "repository": {
    "directory": "packages/unified-serer",
    "type": "git",
    "url": "https://github.com/breadboard-ai/breadboard.git"
  },
  "files": [
    "dist/src"
  ],
  "ava": {
    "timeout": "30s",
    "files": [
      "tests/**/*.ts"
    ],
    "workerThreads": false,
    "typescript": {
      "rewritePaths": {
        "./": "dist/"
      },
      "compile": false
    }
  },
  "keywords": [],
  "author": "Google Labs Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/breadboard-ai/breadboard/issues"
  },
  "homepage": "https://github.com/breadboard-ai/breadboard#readme",
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "ava": "^5.2.0",
    "typescript": "^5.6.3",
    "wireit": "^0.14.9"
  },
  "dependencies": {
    "@breadboard-ai/connection-server": "^0.4.0",
    "@breadboard-ai/visual-editor": "1.25.0",
    "express": "^4.21.2",
    "vite": "^6.0.2",
    "vite-express": "^0.20.0"
  }
}
