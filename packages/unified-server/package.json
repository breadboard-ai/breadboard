{
  "name": "@breadboard-ai/unified-server",
  "private": true,
  "version": "0.4.0",
  "main": "./dist/src/main.js",
  "exports": "./dist/src/main.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:tsc": "wireit",
    "build:vite": "wireit",
    "dev": "npm run serve --watch",
    "dev:fake": "npm run serve:fake --watch",
    "dev-drive": "VITE_BOARD_SERVICE='drive:' npm run serve --watch",
    "docker-build": "docker build --build-context=breadboard=../.. --tag=unified-server .",
    "docker-clean": "docker image rm unified-server",
    "docker-logs": "docker logs unified-server",
    "docker-run": "docker run --name=unified-server --publish=3000:3000 --detach --rm unified-server",
    "docker-run:no-rm": "docker run --name=unified-server --publish=3000:3000 --detach unified-server",
    "docker-stop": "docker stop unified-server",
    "lint": "FORCE_COLOR=1 eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "serve": "wireit",
    "start": "NODE_ENV=production node .",
    "test": "wireit",
    "watch": "FORCE_COLOR=1 tsc --b --watch"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:vite",
        "build:tsc"
      ]
    },
    "build:vite": {
      "dependencies": [
        "../visual-editor#build"
      ]
    },
    "build:tsc": {
      "command": "tsc --pretty --project tsconfig.json",
      "clean": "if-file-deleted",
      "files": [
        "tsconfig.json",
        "src/",
        "tests/"
      ],
      "output": [
        "dist/src/",
        "dist/tests/",
        "dist/server.tsbuildinfo"
      ],
      "dependencies": [
        "<dependencies>#build:tsc",
        "!../visual-editor#build:tsc"
      ]
    },
    "serve": {
      "command": "node --enable-source-maps .",
      "service": true,
      "files": [
        ".env"
      ],
      "dependencies": [
        "build:tsc",
        {
          "script": "../visual-editor#check:tsc",
          "cascade": false
        }
      ]
    },
    "serve:fake": {
      "command": "node --enable-source-maps .",
      "service": true,
      "env": {
        "PORT": "3100",
        "FAKE_MODE": "true",
        "SHELL_GUEST_ORIGIN": "http://guest.localhost:3100",
        "SHELL_HOST_ORIGINS": "http://localhost:3100"
      },
      "files": [
        ".env"
      ],
      "dependencies": [
        "build:tsc",
        {
          "script": "../visual-editor#check:tsc",
          "cascade": false
        }
      ]
    },
    "test": {
      "command": "ava",
      "dependencies": [
        "build:tsc"
      ]
    }
  },
  "repository": {
    "directory": "packages/unified-serer",
    "type": "git",
    "url": "git+https://github.com/breadboard-ai/breadboard.git"
  },
  "files": [
    "dist/src"
  ],
  "keywords": [],
  "author": "Google Labs Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/breadboard-ai/breadboard/issues"
  },
  "homepage": "https://github.com/breadboard-ai/breadboard#readme",
  "devDependencies": {
    "@google-labs/tsconfig": "^0.0.2",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.1",
    "@types/gtag.js": "^0.0.20",
    "@types/jwt-decode": "^2.2.1",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.34.1",
    "dotenv": "^17.2.3",
    "prettier": "^3.8.1",
    "typescript": "^5.8.3",
    "wireit": "^0.15.0-pre.2"
  },
  "dependencies": {
    "@breadboard-ai/types": "0.9.0",
    "@breadboard-ai/utils": "^0.1.0",
    "@breadboard-ai/visual-editor": "1.30.0",
    "@google-cloud/storage": "^7.15.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "google-auth-library": "^10.1.0",
    "jwt-decode": "^4.0.0",
    "vite": "^7.2.6",
    "vite-express": "^0.21.1"
  },
  "directories": {
    "test": "tests"
  }
}
