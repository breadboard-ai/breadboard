{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "rootDir": ".",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/client.tsbuildinfo",
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["src/**/*"],
  "exclude": ["src/server/**/*"]
}
