{
  "title": "Calling ReAct with slots",
  "description": "An implementation of the [ReAct](https://react-lm.github.io/) AI pattern that relies on Breadboard [slots](https://github.com/breadboard-ai/breadboard/blob/main/packages/breadboard/docs/nodes.md#the-slot-node) to supply tools to ReAct. The slots are currently populated by two boards: `search-summarize` and `math`.",
  "version": "0.0.1",
  "edges": [
    {
      "from": "include-1",
      "to": "reactResponse",
      "out": "text",
      "in": "text"
    },
    {
      "from": "userRequest",
      "to": "include-1",
      "out": "text",
      "in": "text"
    }
  ],
  "nodes": [
    {
      "id": "userRequest",
      "type": "input",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "title": "Problem",
              "description": "A problem to be solved"
            }
          },
          "required": ["text"]
        }
      }
    },
    {
      "id": "include-1",
      "type": "include",
      "configuration": {
        "path": "react-with-slot.json",
        "slotted": {
          "tools": {
            "edges": [
              {
                "from": "reflect-2",
                "to": "output-3",
                "out": "graph",
                "in": "graph"
              },
              {
                "from": "input-1",
                "to": "reflect-2",
                "out": "graph",
                "in": "graph"
              },
              {
                "from": "math",
                "to": "output-4",
                "out": "text",
                "in": "text"
              },
              {
                "from": "input-1",
                "to": "math",
                "out": "math",
                "in": "text"
              },
              {
                "from": "search",
                "to": "output-5",
                "out": "text",
                "in": "text"
              },
              {
                "from": "input-1",
                "to": "search",
                "out": "search",
                "in": "text"
              }
            ],
            "nodes": [
              {
                "id": "search",
                "type": "include",
                "configuration": {
                  "path": "search-summarize.json",
                  "description": "Useful for when you need to find facts. Input should be a search query."
                }
              },
              {
                "id": "math",
                "type": "include",
                "configuration": {
                  "path": "math.json",
                  "description": "Useful for when you need to solve math problems. Input should be a math problem to be solved."
                }
              },
              {
                "id": "input-1",
                "type": "input"
              },
              {
                "id": "reflect-2",
                "type": "reflect"
              },
              {
                "id": "output-3",
                "type": "output"
              },
              {
                "id": "output-4",
                "type": "output"
              },
              {
                "id": "output-5",
                "type": "output"
              }
            ],
            "kits": [
              {
                "url": "npm:@google-labs/core-kit"
              }
            ]
          }
        }
      }
    },
    {
      "id": "reactResponse",
      "type": "output",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "title": "ReAct",
              "description": "ReAct's response to the user's problem"
            }
          },
          "required": ["text"]
        }
      }
    }
  ],
  "kits": [
    {
      "url": "npm:@google-labs/core-kit"
    }
  ]
}
