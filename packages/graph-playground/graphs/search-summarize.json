{
  "title": "The Search Summarizer Board",
  "description": "A simple AI pattern that first uses Google Search to find relevant bits of information and then summarizes them using LLM.",
  "version": "0.0.1",
  "edges": [
    {
      "from": "palm-generateText-1",
      "to": "output-2",
      "out": "completion",
      "in": "text"
    },
    {
      "from": "summarizing-template",
      "to": "palm-generateText-1",
      "out": "prompt",
      "in": "text"
    },
    {
      "from": "jsonata-5",
      "to": "summarizing-template",
      "out": "result",
      "in": "context"
    },
    {
      "from": "fetch-4",
      "to": "jsonata-5",
      "out": "response",
      "in": "json"
    },
    {
      "from": "urlTemplate-3",
      "to": "fetch-4",
      "out": "url",
      "in": "url"
    },
    {
      "from": "secrets-6",
      "to": "palm-generateText-1",
      "out": "PALM_KEY",
      "in": "PALM_KEY"
    },
    {
      "from": "secrets-6",
      "to": "urlTemplate-3",
      "out": "API_KEY",
      "in": "API_KEY"
    },
    {
      "from": "secrets-6",
      "to": "urlTemplate-3",
      "out": "GOOGLE_CSE_ID",
      "in": "GOOGLE_CSE_ID"
    },
    {
      "from": "input",
      "to": "summarizing-template",
      "out": "text",
      "in": "question"
    },
    {
      "from": "input",
      "to": "urlTemplate-3",
      "out": "text",
      "in": "query"
    }
  ],
  "nodes": [
    {
      "id": "palm-generateText-1",
      "type": "palm-generateText"
    },
    {
      "id": "output-2",
      "type": "output",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "title": "Answer",
              "description": "The answer to the query"
            }
          },
          "required": ["text"]
        }
      }
    },
    {
      "id": "summarizing-template",
      "type": "promptTemplate",
      "configuration": {
        "template": "Use context below to answer this question:\n\n##Question:\n{{question}}\n\n## Context {{context}}\n\\n## Answer:\n"
      }
    },
    {
      "id": "urlTemplate-3",
      "type": "urlTemplate",
      "configuration": {
        "template": "https://www.googleapis.com/customsearch/v1?key={API_KEY}&cx={GOOGLE_CSE_ID}&q={query}"
      }
    },
    {
      "id": "fetch-4",
      "type": "fetch"
    },
    {
      "id": "jsonata-5",
      "type": "jsonata",
      "configuration": {
        "expression": "$join(items.snippet, '\n')"
      }
    },
    {
      "id": "secrets-6",
      "type": "secrets",
      "configuration": {
        "keys": ["PALM_KEY", "API_KEY", "GOOGLE_CSE_ID"]
      }
    },
    {
      "id": "input",
      "type": "input",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "title": "Query",
              "description": "What would you like to search for?"
            }
          },
          "required": ["text"]
        }
      }
    }
  ],
  "kits": [
    {
      "url": "npm:@google-labs/llm-starter"
    },
    {
      "url": "npm:@google-labs/palm-kit"
    }
  ]
}
